<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFF">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_earth_white_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your foreign currency. You can change this later."
        android:textSize="26sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#FF5722"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="US Dollars (USD)"
        android:id="@+id/forusd"
        android:textSize="18dp"
        android:textColor="#FF5722"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:buttonTint="#FF5722" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Indian Rupees (INR)"
        android:id="@+id/forinr"
        android:textSize="18dp"
        android:textColor="#FF5722"
        android:layout_marginBottom="20dp"
        android:buttonTint="#FF5722" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pound Sterling (GBP)"
        android:id="@+id/forgbp"
        android:textSize="18dp"
        android:textColor="#FF5722"
        android:layout_marginBottom="20dp"
        android:buttonTint="#FF5722" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Japanese Yen (JPY)"
        android:id="@+id/forjpy"
        android:textSize="18dp"
        android:textColor="#FF5722"
        android:layout_marginBottom="20dp"
        android:buttonTint="#FF5722" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Australian Dollars (AUD)"
        android:id="@+id/foraud"
        android:textSize="18dp"
        android:textColor="#FF5722"
        android:layout_marginBottom="20dp"
        android:buttonTint="#FF5722" />



</LinearLayout>